<!-- 로그인, 회원가입 폼 -->
<section id="login-form-container" class="display-none">
  <div class="login-form-wrapper">
    <div class="login-signup-transform-wrapper">
      <button class="login-signup-transform" id="loginBtn">로그인</button>
      <button class="login-signup-transform" id="signupBtn">회원가입</button>
    </div>
    <form id="login-form" class="login-form">
      <div class="form-input-wrapper">
        <label for="login-id-input">아이디</label>
        <input type="text" name="userId" placeholder="아이디 입력" id="login-id-input" />
      </div>
      <div class="form-input-wrapper">
        <label for="login-pw-input">비밀번호</label>
        <input type="password" name="userPw" placeholder="비번 입력" id="login-pw-input" />
      </div>
      <input type="submit" value="Login" id="login-form-submit" />
    </form>
    <form id="signup-form" class="login-form">
      <div class="form-input-wrapper">
        <label for="login-id-input">아이디</label>
        <input type="text" name="userId" placeholder="아이디 입력" id="signup-id-input" />
      </div>
      <div class="form-input-wrapper">
        <label for="login-nickname-input">닉네임</label>
        <input type="text" name="userNickname" placeholder="닉네임 입력" id="signup-nickname-input" />
      </div>
      <div class="form-input-wrapper">
        <label for="login-pw-input">비밀번호</label>
        <input type="password" name="userPw" placeholder="비번 입력" id="signup-pw-input" />
      </div>
      <input type="submit" value="SignUp" id="signup-form-submit" />
    </form>
  </div>
</section>
