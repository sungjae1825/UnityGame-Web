<script src="js/contents.js"></script>
<script>
  const logoNavigation = document.querySelector(".logo");
  const gameNavigation = document.getElementById("game-navigation");
  const boardNavigation = document.getElementById("board-navigation");
  const achievementsNavigation = document.getElementById("achievements-navigation");

  logoNavigation.addEventListener("click", e => {
    e.preventDefault();

    window.location.href = "/";
  });

  gameNavigation.addEventListener("click", () => {
    window.location.href = "/game";
  });

  boardNavigation.addEventListener("click", e => {
    e.preventDefault();

    window.location.href = "/board";
  });

  achievementsNavigation.addEventListener("click", () => {
    if (window.localStorage.getItem("nickname")) {
      window.location.href = "/achievements";
    } else {
      window.alert("로그인 후 업적 이용 가능합니다.");
    }
  });
</script>
